<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  android:background="#f3f3f9">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:orientation="vertical" >

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp" >

          <TextView
              android:id="@+id/tvUsrname"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:gravity="center_vertical"
              android:text="昵  称    "
              android:textColor="@android:color/black" />

          <EditText
              android:id="@+id/nichen"
              android:layout_width="fill_parent"
              android:layout_height="48dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/tvUsrname"
              android:selectAllOnFocus="true"
              android:textColor="@android:color/black"
              android:textSize="16sp" />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp" >

          <TextView
              android:id="@+id/tvPassword"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:gravity="center_vertical"
              android:text="年  龄    "
              android:textColor="@android:color/black" />

          <EditText
              android:id="@+id/nianling"
              android:layout_width="fill_parent"
              android:layout_height="48dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/tvPassword"
              android:password="true"
              android:textColor="@android:color/black"
              android:textSize="16sp" />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp" >

          <TextView
              android:id="@+id/tvPasswordConfirm"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:gravity="center_vertical"
              android:text="联系电话"
              android:textColor="@android:color/black" />

          <EditText
              android:id="@+id/dianhua"
              android:layout_width="fill_parent"
              android:layout_height="48dp"
              android:layout_toRightOf="@id/tvPasswordConfirm"
              android:password="true"
              android:textColor="@android:color/black"
              android:textSize="16sp" />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp" >

          <TextView
              android:id="@+id/tvNickName"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:gravity="center_vertical"
              android:text="擅长类型"
              android:textColor="@android:color/black" />

          <EditText
              android:id="@+id/etNickName"
              android:layout_width="fill_parent"
              android:layout_height="48dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/tvNickName"
              android:maxLines="2"
              android:textColor="@android:color/black"
              android:textSize="16sp" />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp" >

          <TextView
              android:id="@+id/tvGender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="性  别  "
              android:textColor="#484848"
              android:textSize="16dp" />

          <RadioGroup
              android:id="@+id/rgSex"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="5dip"
              android:layout_toRightOf="@id/tvGender"
              android:orientation="horizontal" >

              <RadioButton
                  android:id="@+id/rbrgMale"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="male"
                  android:textColor="@android:color/black" />

              <RadioButton
                  android:id="@+id/rbrgFemale"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="50dp"
                  android:text="female"
                  android:textColor="@android:color/black" />
          </RadioGroup>
      </RelativeLayout>


      <Button
          android:id="@+id/btnOk"
          android:layout_width="216dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="确认"
          android:textColor="#fff"
          android:textSize="15sp" />
       <Button
          android:id="@+id/cw"
          android:layout_width="216dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="#f3f3f9"
         
          
          android:textSize="15sp" />
        
      

  </LinearLayout>

</ScrollView>